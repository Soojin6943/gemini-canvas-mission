<div id="app">
    <!-- 시작 화면 -->
    <div id="start-screen" class="card">
        <h1>타다닥</h1>
        <p>10개의 타겟을 최대한 빨리 클릭하세요!</p>
        
        <div class="input-group">
            <label for="username">플레이어 이름</label>
            <input type="text" id="username" placeholder="이름을 입력하세요" maxlength="10">
            <div class="error-msg">이름을 적어주셔야 기록이 저장됩니다!</div>
        </div>

        <div class="difficulty-options">
            <button class="btn" onclick="checkNameAndStart('easy')">하 (3x3)</button>
            <button class="btn" onclick="checkNameAndStart('normal')">중 (4x4)</button>
            <button class="btn" onclick="checkNameAndStart('hard')">상 (5x5)</button>
            <button class="btn btn-outline" onclick="showRanking()">랭킹 보기</button>
        </div>
    </div>

    <!-- 게임 화면 -->
    <div id="game-screen">
        <div class="game-header">
            <div class="stat-box">남은 횟수: <span id="rounds-left">10</span></div>
            <div class="stat-box">시간: <span id="timer">0.000</span>s</div>
        </div>
        <div id="grid-container" class="grid-container"></div>
    </div>

    <!-- 결과 화면 -->
    <div id="result-screen" class="card">
        <div id="loading-overlay">저장 중...</div>
        <h1>게임 종료!</h1>
        <div style="font-size: 3rem; font-weight: 800; margin: 1rem 0;"><span id="final-time">0.000</span>s</div>
        <p id="penalty-detail" style="color: var(--danger);"></p>
        <button class="btn" onclick="showRanking()">랭킹 확인하기</button>
        <button class="btn btn-outline" onclick="resetGame()">다시 하기</button>
    </div>

    <!-- 랭킹 화면 -->
    <div id="ranking-screen" class="card">
        <h2>명예의 전당</h2>
        <div class="ranking-tabs">
            <button class="tab-btn active" data-diff="easy" onclick="loadRankings('easy', this)">하</button>
            <button class="tab-btn" data-diff="normal" onclick="loadRankings('normal', this)">중</button>
            <button class="tab-btn" data-diff="hard" onclick="loadRankings('hard', this)">상</button>
        </div>
        <div style="max-height: 300px; overflow-y: auto;">
            <table class="ranking-table">
                <thead>
                    <tr>
                        <th>순위</th>
