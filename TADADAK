<div id="countdown">3</div>

<!-- Firebase SDK -->
<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
    import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
    import { getFirestore, collection, addDoc, getDocs } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

    const firebaseConfig = JSON.parse(__firebase_config);
    const appId = typeof __app_id !== 'undefined' ? __app_id : 'reaction-game';
    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    let user = null;
    let playerName = "";

    const initAuth = async () => {
        if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
            await signInWithCustomToken(auth, __initial_auth_token);
        } else {
            await signInAnonymously(auth);
        }
    };
    initAuth();
    onAuthStateChanged(auth, (u) => { user = u; });

    const config = {
        easy: { size: 3, timeout: 1500 },
        normal: { size: 4, timeout: 1000 },
        hard: { size: 5, timeout: 700 }
    };

    let currentDifficulty = 'normal';
    let clicksDone = 0;
    let startTime = 0;
    let timerInterval = null;
    let activeCellIndex = -1;
    let spawnTimeout = null;
    let penalties = 0;
    let totalPenaltyTime = 0;

    // --- 유효성 검사 및 시작 ---
    window.checkNameAndStart = (diff) => {
        const nameInput = document.getElementById('username');
        const nameValue = nameInput.value.trim();
        
        if (!nameValue) {
            nameInput.classList.add('input-error');
            nameInput.focus();
            return;
        }
        
        nameInput.classList.remove('input-error');
        playerName = nameValue;
        startGame(diff);
    };

    // 입력 필드 변경 시 에러 스타일 제거
    document.getElementById('username').addEventListener('input', function() {
        if (this.value.trim()) {
            this.classList.remove('input-error');
        }
    });

    function startGame(diff) {
        currentDifficulty = diff;
        document.getElementById('start-screen').style.display = 'none';
        
        let count = 3;
        const countdown = document.getElementById('countdown');
        countdown.style.display = 'flex';
        countdown.innerText = count;
        
        const countInterval = setInterval(() => {
            count--;
            if (count > 0) countdown.innerText = count;
            else {
                clearInterval(countInterval);
                countdown.style.display = 'none';
                initBoard();
            }
        }, 1000);
    }

    function initBoard() {
        const { size } = config[currentDifficulty];
        const grid = document.getElementById('grid-container');
        grid.style.gridTemplateColumns = `repeat(${size}, 1fr)`;
        grid.innerHTML = '';
        
        for (let i = 0; i < size * size; i++) {
            const cell = document.createElement('div');
            cell.className = 'cell';
            cell.onclick = () => handleCellClick(i);
            grid.appendChild(cell);
        }

        document.getElementById('game-screen').style.display = 'block';
        clicksDone = 0;
        penalties = 0;
        totalPenaltyTime = 0;
        document.getElementById('rounds-left').innerText = 10;
        
        startTime = performance.now();
        startTimer();
        spawnTarget();
    }

    function startTimer() {
        timerInterval = setInterval(() => {
            const now = performance.now();
            const elapsed = ((now - startTime) / 1000) + totalPenaltyTime;
            document.getElementById('timer').innerText = elapsed.toFixed(3);
        }, 10);
    }

    function spawnTarget() {
        const cells = document.querySelectorAll('.cell');
        cells.forEach(c => c.classList.remove('active'));

        const { size, timeout } = config[currentDifficulty];
        let next;
        do { next = Math.floor(Math.random() * (size * size)); } while (next === activeCellIndex);

        activeCellIndex = next;
        if (cells[activeCellIndex]) {
            cells[activeCellIndex].classList.add('active');
        }

        clearTimeout(spawnTimeout);
        spawnTimeout = setTimeout(() => {
            if (document.getElementById('game-screen').style.display === 'block') spawnTarget();
        }, timeout);
    }

    function handleCellClick(index) {
        if (index === activeCellIndex) {
            clicksDone++;
            document.getElementById('rounds-left').innerText = 10 - clicksDone;
            activeCellIndex = -1;
            clearTimeout(spawnTimeout);
            if (clicksDone < 10) spawnTarget();
            else finishGame();
        } else {
            penalties++;
            totalPenaltyTime += 0.5;
            const cells = document.querySelectorAll('.cell');
            if (cells[index]) {
                cells[index].classList.add('wrong');
                setTimeout(() => cells[index].classList.remove('wrong'), 300);
            }
        }
    }

    async function finishGame() {
        clearInterval(timerInterval);
        clearTimeout(spawnTimeout);
        
        const finalTime = parseFloat(document.getElementById('timer').innerText);
        document.getElementById('game-screen').style.display = 'none';
        document.getElementById('result-screen').style.display = 'block';
        document.getElementById('final-time').innerText = finalTime.toFixed(3);
        document.getElementById('penalty-detail').innerText = `실수 ${penalties}회 (+${(penalties*0.5).toFixed(1)}초 페널티 포함)`;

        if (!user) return;
        document.getElementById('loading-overlay').style.display = 'flex';
        try {
            await addDoc(collection(db, 'artifacts', appId, 'public', 'data', 'leaderboard'), {
                name: playerName,
                time: finalTime,
                difficulty: currentDifficulty,
                timestamp: Date.now()
            });
        } catch (e) {
            console.error(e);
        }
        document.getElementById('loading-overlay').style.display = 'none';
    }

    // --- 랭킹 보기 (플레이한 난이도 우선) ---
    window.showRanking = () => {
        document.getElementById('start-screen').style.display = 'none';
        document.getElementById('result-screen').style.display = 'none';
        document.getElementById('ranking-screen').style.display = 'block';
        
        // 현재 플레이한 난이도 탭 활성화
        const targetTab = document.querySelector(`.tab-btn[data-diff="${currentDifficulty}"]`);
        loadRankings(currentDifficulty, targetTab);
    };

    window.loadRankings = async (diff, btn = null) => {
        if (btn) {
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
        }
        
        const tbody = document.getElementById('ranking-body');
        tbody.innerHTML = '<tr><td colspan="3" style="text-align:center">데이터를 불러오는 중...</td></tr>';

        try {
            const q = collection(db, 'artifacts', appId, 'public', 'data', 'leaderboard');
            const snapshot = await getDocs(q);
            
            let data = [];
            snapshot.forEach(doc => {
                const item = doc.data();
                if (item.difficulty === diff) {
                    data.push(item);
                }
            });

            data.sort((a, b) => a.time - b.time);
            const top10 = data.slice(0, 10);

            tbody.innerHTML = '';
            if (top10.length === 0) {
                tbody.innerHTML = '<tr><td colspan="3" style="text-align:center">아직 기록이 없습니다.</td></tr>';
            } else {
                top10.forEach((item, idx) => {
                    const row = document.createElement('tr');
                    row.className = 'rank-row';
                    row.innerHTML = `
                        <td>${idx + 1}위</td>
                        <td>${item.name}</td>
                        <td>${item.time.toFixed(3)}s</td>
                    `;
                    tbody.appendChild(row);
                });
            }
        } catch (e) {
            tbody.innerHTML = '<tr><td colspan="3" style="text-align:center; color:var(--danger)">데이터 로드 실패</td></tr>';
        }
    };

    window.resetGame = () => {
        location.reload();
    };
</script>

</body>
</html>
